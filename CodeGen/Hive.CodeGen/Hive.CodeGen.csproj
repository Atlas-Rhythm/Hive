<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>

    <IsCodeGen>true</IsCodeGen>

    <!--<GeneratePackageOnBuild>true</GeneratePackageOnBuild>-->
    <!--<IncludeBuildOutput>false</IncludeBuildOutput>-->
    
    <!--<LangVersion>preview</LangVersion>-->
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="3.8.0-3.final" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.0" PrivateAssets="all" />
    <PackageReference Include="System.Xml.XDocument" Version="4.3.0" PrivateAssets="all" />
  </ItemGroup>
  
  <ItemGroup>
    <CompilerVisibleItemMetadata Include="AdditionalFiles" MetadataName="IsResXToGenerate" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Hive.CodeGen.Attributes\Hive.CodeGen.Attributes.csproj" PrivateAssets="all" Private="true" />
  </ItemGroup>

  <ItemGroup>
    <None Include="build\*" Pack="true" PackagePath="build"/>
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

</Project>
